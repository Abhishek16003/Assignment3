<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#228b22"
    tools:context="com.code.abhishek.assignment3.InternalStorage"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_weight="0.30">

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read text from external file "
        android:id="@+id/buttonrext"
        android:layout_gravity="center_horizontal"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/shape1"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read text from external public file"
        android:id="@+id/buttonreadpublic"
        android:layout_gravity="center_horizontal"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/shape1"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="read text from external private file"
        android:id="@+id/buttonreadprivate"
        android:layout_gravity="center_horizontal"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/shape1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Text from file:"
        android:id="@+id/textViewfile"
        android:textColor="#ffffff"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:weightSum="1"
        android:layout_weight="0.51">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewdispext"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            />
    </LinearLayout>

</LinearLayout>
</ScrollView>